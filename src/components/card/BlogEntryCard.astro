---
import LinkCard from './LinkCard.astro';

export interface Props {
  title: string;
  pubDate: Date;
  imageUrl: string;
  body: string;
  href: string;
}

const { href, title, imageUrl, pubDate, body } = Astro.props;
---

<li >
  <LinkCard>
    <a href={href}>
      <div class="flex flex-row p-0">
        <div class="flex-auto max-w-xs">
          <img
            class="w-full h-full rounded-l-lg object-contain"
            src={imageUrl}
          />
        </div>
  
        <div class="flex flex-col blog-entry-card-text flex-gor">
          <div class="flex flex-row justify-between">
            <h2>
              {title}
            </h2>
            <h2>
              {pubDate.toLocaleDateString()}
            </h2>
          </div>
          <p class="h-20 text-transparent bg-clip-text bg-gradient-to-b from-black dark:from-white">
            {body}
          </p>
        </div>
      </div>
    </a>
  </LinkCard>
</li>

<style>
  .blog-entry-card-text {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
